# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                   controllers.HomeController.index()

GET     /books              controllers.BooksController.index
GET     /books/:id          controllers.BooksController.show(id: Integer)
POST    /books              controllers.BooksController.save(request: Request)
PUT     /books/:id          controllers.BooksController.update(id: Integer, request: Request)
DELETE  /books/:id          controllers.BooksController.destroy(id: Integer)



# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET    /hello/:name                 controllers.HomeController.hello(name:String)
